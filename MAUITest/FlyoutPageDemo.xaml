<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITest.FlyoutPageDemo"
             Title="Flyout Page Demo"
            FlyoutLayoutBehavior="SplitOnLandscape">
    
    <FlyoutPage.Flyout>
        <ContentPage Title="My app" BackgroundColor="Aqua">
            <VerticalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Hola desde Flyout" FontSize="Large"/>
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage Title="My app" BackgroundColor="Yellow">
            <VerticalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Hola desde Flyout Details" FontSize="Large"/>
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>